<resources>

    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.AppTheme</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.AppTheme</item>
    </style>

    <style name="ActionBar.Solid.AppTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid</item>
    </style>

    <style name="ActionButton.CloseMode.AppTheme" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done</item>
    </style>
    
    
    <!-- Text for sections -->
    <style name="AppTheme.TitleText">
        <item name="android:textSize">@dimen/demo_title_section_textsize</item>
        <item name="android:layout_marginLeft">@dimen/demo_title_section_margin</item>
        <item name="android:layout_marginRight">@dimen/demo_title_section_margin</item>
        <item name="android:layout_marginBottom">@dimen/demo_title_section_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/demo_title_section_margin_top</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/demo_title_section_textcolor</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
    <!--Style for simple title inner header view-->
    <style name="AppTheme.HeaderTitle">
        <item name="android:textSize">@dimen/card_header_simple_title_text_size</item>
        <item name="android:textColor">@color/card_text_color_header</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/card_header_simple_title_margin_left</item>
        <item name="android:layout_marginTop">@dimen/card_header_simple_title_margin_top</item>
        <item name="android:layout_marginRight">@dimen/card_header_simple_title_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/card_header_simple_title_margin_bottom</item>
    </style>
    
    <style name="ToggleButton.LightBulb" parent="@android:style/Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/toggle_light_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
  
    <style name="ToggleButton.Relay" parent="@android:style/Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/toggle_relay_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    
    <style name="ToggleButton.Contact" parent="@android:style/Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/toggle_contact_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="ToggleButton.Pending" parent="@android:style/Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/toggle_pending_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

</resources>